{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Analyze Portfolio (CLI)",
      "type": "debugpy",
      "request": "launch",
      "module": "portfolio_advisor.cli",
      "cwd": "${workspaceFolder}",
      "envFile": "${workspaceFolder}/.env",
      "env": {
        "PYTHONPATH": "${workspaceFolder}/src"
      },
      "preLaunchTask": "Prepare I/O dirs",
      "args": [
        "--input-dir",
        "./input",
        "--output-dir",
        "./output",
        "--wavelet-level",
        "6",
        "--include-news",
        "--agent-progress"
      ],
      "console": "integratedTerminal",
      "justMyCode": true
    },
    {
      "name": "Update Stock (AAPL)",
      "type": "debugpy",
      "request": "launch",
      "module": "portfolio_advisor.cli",
      "cwd": "${workspaceFolder}",
      "envFile": "${workspaceFolder}/.env",
      "env": {
        "PYTHONPATH": "${workspaceFolder}/src"
      },
      "preLaunchTask": "Prepare I/O dirs",
      "args": [
        "--input-dir",
        "./input",
        "--output-dir",
        "./output",
        "--mode",
        "stock",
        "--ticker",
        "AAPL",
        "--wavelet-level",
        "6",
        "--include-news",
        "--agent-progress",
        "--enable-boundary-extension",
        "--boundary-noise-injection",
        "--boundary-strategy",
        "gaussian_process",
        "--boundary-steps",
        "100",
        "--boundary-lookback",
        "20"
      ],
      "console": "integratedTerminal",
      "justMyCode": true
    },
    {
      "name": "Extract Article Text (AAPL)",
      "type": "debugpy",
      "request": "launch",
      "module": "portfolio_advisor.cli",
      "cwd": "${workspaceFolder}",
      "envFile": "${workspaceFolder}/.env",
      "env": {
        "PYTHONPATH": "${workspaceFolder}/src"
      },
      "preLaunchTask": "Prepare I/O dirs",
      "args": [
        "--input-dir",
        "./input",
        "--output-dir",
        "./output",
        "--mode",
        "extract-text",
        "--force-extraction",
        "--ticker",
        "AAPL",
        "--enable-boundary-extension",
        "--boundary-strategy",
        "gaussian_process",
        "--boundary-steps",
        "10",
        "--boundary-lookback",
        "30"
      ],
      "console": "integratedTerminal",
      "justMyCode": true
    }
  ]
}


