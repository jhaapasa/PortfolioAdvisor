#!/usr/bin/env bash
set -euo pipefail

PY=python3.13

if [ ! -d .venv ]; then
  echo "Creating virtual environment in .venv" >&2
  "$PY" -m venv .venv
fi
source .venv/bin/activate
python -m pip install --upgrade pip
pip install -e .[dev]
echo "Bootstrap complete. Activate with: source .venv/bin/activate" >&2


